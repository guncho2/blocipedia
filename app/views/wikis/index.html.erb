<h1>All wiki</h1>


<% @wikis.each do |wiki| %>
  <div class="media">
    <div class="media-body">
      <h4 class="media-heading">


        <%= link_to markdown(wiki.title), wiki %>
        <small>

              </small>
      </h4>
    </div>

  </div>

<% end %>

<% if current_user.role == "standard" %>
<div class="col-md-4">
	    <%= link_to "New Public Wiki", new_wiki_path, class: 'btn btn-success' %>
	  </div>
<% else %>

<% if current_user.role == "admin" || current_user.role == "premium" %>

<div class="col-md-4">
	    <%= link_to "New Private Wiki", new_wiki_path, class: 'btn btn-success' %>
	  </div>

    <% end %>
<% end %>
